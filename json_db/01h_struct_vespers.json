      "source_ref": "Dolnytsky I: Vespers with Vigil",
      "sequence": [
        {
          "id": "vesting_rite",
          "rubric": {
            "title": "Vesting and Censing",
            "source_ref": "Dolnytsky I:1",
            "roles": {
              "priest": "Bless and vest in Epitrachelion. If Deacons serve, bless their Sticharia. Stand before the Holy Table.",
              "deacon": "Vest in Sticharion. Open the Holy Doors. Exclaim 'Bless, Master, the censer.' Perform the Great Censing.",
              "subdeacon": "Light the candles on the Holy Table."
            }
          }
        },
        {
          "id": "opening_vigil",
          "rubric": {
            "title": "The Opening",
            "source_ref": "Dolnytsky I:2",
            "roles": {
              "deacon": "Stand before the Holy Doors. Exclaim 'Bless, Master!'",
              "priest": "Make the sign of the Cross with the censer before the Holy Table. Sing 'Glory to the Holy, Consubstantial...'"
            }
          },
          "content": {
            "type": "fixed_ref",
            "ref_key": "horologion.blessing_vigil"
