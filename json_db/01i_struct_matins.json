                    "type": "variable_logic",
                    "logic": {
                      "function": "resolve_lenten_sessional",
                      "args": {
                        "position": 1,
                        "source": "octoechos"
                      }
                    }
                  }
                },
                {
                  "id": "kathisma_2",
